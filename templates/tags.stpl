<!DOCTYPE html>
<html>
    <% include!("head.stpl"); %>
    <script>
    function renameTag(tag_name) {
        var form = `<form action="/rename-tag/${tag_name}" method="POST">
                     <input type="text" value="${tag_name}" name="new">
                     <input type="submit" hidden>
                   </form>`

        document.getElementById(tag_name).outerHTML = form;
    }
    </script>
    <body>
        <header>
            <nav>
                <h1>Tags <%= tags.len() %></h1>
                <% include!("nav.stpl"); %>
            </nav>
        </header>
        <main>
            <article class="tags-list">
                    <% for tag in tags { %>
                    <%# <div class="tags-list-element"> %>
                            <h4 id="<%= tag.tag_name %>"><a href="/tags/<%= tag.tag_name %>"><%= tag.tag_name %></a></h4>
                            <span><%= tag.bookmarks_count %></span>
                            <div class="tag-edit-buttons">
                                <button type="button" onclick="renameTag('<%= tag.tag_name %>')">&#x270F;</button>
                                <a href="/delete-tag/<%= tag.tag_name %>">&#x1F5D1;</a>
                            </div>
                    <%# </div> %>
                    <% } %>
            </article>
        </main>
    </body>
</html>