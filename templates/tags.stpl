<!DOCTYPE html>
<html>
    <% include!("head.stpl"); %>
    <body>
        <header>
            <nav>
                <h1>Tags <%= tags.len() %></h1>
                <% include!("nav.stpl"); %>
            </nav>
        </header>
        <main>
            <article>
                <div class="tags-list">
                <% for tag in tags { %>
                        <h3><a href="/tags/<%= tag.tag_name %>"><%= tag.tag_name %></a></h3>
                        <span><%= tag.bookmarks_count %></span>
                <% } %>
                </div>
            </article>
        </main>
    </body>
</html>